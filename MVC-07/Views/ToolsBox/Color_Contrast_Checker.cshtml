@section JS_Scripts {

    <script>SetAside("Menu-ToolsBox");</script>

    <script>document.addEventListener('DOMContentLoaded', function () {

            const foregroundColorPicker = document.getElementById('foreground');
            const backgroundColorPicker = document.getElementById('background');
            const foregroundHexInput = document.getElementById('foregroundHex');
            const backgroundHexInput = document.getElementById('backgroundHex');
            const preview = document.getElementById('preview');
            const contrastResult = document.getElementById('contrastResult');

            function hexToRGB(hex) {
                let r = 0, g = 0, b = 0;
                // 3 digits
                if (hex.length === 4) {
                    r = parseInt(hex[1] + hex[1], 16);
                    g = parseInt(hex[2] + hex[2], 16);
                    b = parseInt(hex[3] + hex[3], 16);
                }
                // 6 digits
                else if (hex.length === 7) {
                    r = parseInt(hex[1] + hex[2], 16);
                    g = parseInt(hex[3] + hex[4], 16);
                    b = parseInt(hex[5] + hex[6], 16);
                }
                return [r, g, b];
            }

            function updatePreviewAndContrast() {
                const fgColor = foregroundHexInput.value;
                const bgColor = backgroundHexInput.value;
                preview.style.color = fgColor;
                preview.style.backgroundColor = bgColor;
                updateContrastResult(fgColor, bgColor);
            }

            function synchronizeColorInputs() {
                foregroundColorPicker.value = foregroundHexInput.value;
                backgroundColorPicker.value = backgroundHexInput.value;
                updatePreviewAndContrast();
            }

            function synchronizeHexInputs() {
                foregroundHexInput.value = foregroundColorPicker.value.toUpperCase();
                backgroundHexInput.value = backgroundColorPicker.value.toUpperCase();
                updatePreviewAndContrast();
            }

            function luminance(r, g, b) {
                const a = [r, g, b].map(function (v) {
                    v /= 255;
                    return v <= 0.03928 ? v / 12.92 : Math.pow((v + 0.055) / 1.055, 2.4);
                });
                return a[0] * 0.2126 + a[1] * 0.7152 + a[2] * 0.0722;
            }

            function contrast(rgb1, rgb2) {
                const lum1 = luminance(rgb1[0], rgb1[1], rgb1[2]);
                const lum2 = luminance(rgb2[0], rgb2[1], rgb2[2]);
                return (Math.max(lum1, lum2) + 0.05) / (Math.min(lum1, lum2) + 0.05);
            }

            foregroundColorPicker.addEventListener('input', synchronizeHexInputs);
            backgroundColorPicker.addEventListener('input', synchronizeHexInputs);
            foregroundHexInput.addEventListener('input', synchronizeColorInputs);
            backgroundHexInput.addEventListener('input', synchronizeColorInputs);

            document.getElementById('foreground').addEventListener('input', function () {
                document.getElementById('foregroundHex').value = this.value.toUpperCase();
            });

            document.getElementById('foregroundHex').addEventListener('input', function () {
                const hexPattern = /^#[0-9A-F]{6}$/i;
                if (hexPattern.test(this.value)) {
                    document.getElementById('foreground').value = this.value.toUpperCase();
                }
            });

            updatePreviewAndContrast();

            function Convert21To100Percentage(number) {
                if (number < 1 || number > 21) {
                    return null;
                }
                return ((number - 1) / 20) * 100;
            }

            function ColorSetterCheck(element, check) {
                if (check == 1) {
                    element.classList.add('Succcess-Result');
                    element.classList.remove('Fail-Result');
                }
                else {
                    element.classList.add('Fail-Result');
                    element.classList.remove('Succcess-Result');
                }
            }

            function updateContrastResult(fgColor, bgColor) {
                const fgRGB = hexToRGB(fgColor);
                const bgRGB = hexToRGB(bgColor);
                const ratio = contrast(fgRGB, bgRGB).toFixed(2);
                let className = '';
                let listItems = '';

                let AA = ratio > 4.5 ? 1 : 0;
                let AAA = ratio > 7.0 ? 1 : 0;
                let AA18PT = ratio > 3.0 ? 1 : 0;
                let AAA18PT = ratio > 4.5 ? 1 : 0;
                let COLORS = ratio > 3.26 ? 1 : 0;
                let COLORDIFF = ratio > 5.0 ? 1 : 0;
                let Message = "";
                let ResultColor = "";
                let RatioPercentage = 0;

                //Very Dark Green: #003300
                //Dark Green: #005E00
                //Green: #00A300
                //Dark Orange: #FF8C00
                //Red: #FF0000
                //Orange: #FFA500


                if (ratio >= 21) { // Very Dark Green
                    ResultColor = "1";
                    RatioPercentage = 100;
                    Message = "Your colors contrast is at the maximum possible level. Ideal for all viewers under any conditions.";
                }
                else if (ratio >= 15 && ratio < 21) { // Very Dark Green
                    ResultColor = "1";
                    RatioPercentage = 100;
                    Message = "Extremely high contrast. Exceeds the highest accessibility standards.";
                }
                else if (ratio > 8 && ratio < 15) { // Dark Green
                    ResultColor = "1";
                    RatioPercentage = 100;
                    Message = "Superb contrast. Far exceeds accessibility standards for any text size.";
                }
                else if (ratio >= 7 && ratio < 8) { // Green
                    ResultColor = "2";
                    RatioPercentage = 100;
                    Message = "Excellent contrast. Excellent for all text sizes, surpasses WCAG AAA standards. Excellent readability for all users.";
                }
                else if (ratio >= 4.5) { //  Orange
                    ResultColor = "3";
                    RatioPercentage = 70;
                    Message = "Good for all text sizes. Meets WCAG AA for normal text and AAA for large text. Sufficient for AA standards but not AAA. Good for most users.";
                }
                else if (ratio >= 3.1) { // Dark Orange
                    ResultColor = "3";
                    RatioPercentage = 50;
                    Message = "Improvements advised. Meets minimum WCAG AA standards for large text. Consider improving for broader accessibility. Acceptable for large text but not for normal text.";
                }
                else if (ratio < 3) { // Red
                    ResultColor = "4";
                    RatioPercentage = 10;
                    Message = "Strongly consider enhancing contrast. Fails WCAG AA standards for all text sizes. Contrast too low for accessible design. Not recommended for any text size.";
                }
                else if (ratio < 4.5 && ratio > 3) { // Orange
                    ResultColor = "3";
                    RatioPercentage = 50;
                    Message = "Improvements advised. Not recommended for normal text. Acceptable for large text but not for normal text.";
                }
                else if (ratio < 7 && ratio >= 4.5) { // Orange
                    ResultColor = "3";
                    RatioPercentage = 50;
                    Message = ". Good for most user. Sufficient for AA standards but not AAA. ";
                }
                else if (ratio >= 7) { // Green
                    ResultColor = "1";
                    RatioPercentage = 100;
                    Message = "Excellent contrast. Excellent for all text sizes, surpasses WCAG AAA standards. Excellent readability for all users.";
                }

                document.getElementById('LiveRatioValue').textContent = String(ratio + " " + "Ratio");

                ColorSetterCheck(document.getElementById('AA'), AA);
                ColorSetterCheck(document.getElementById('AAA'), AAA);
                ColorSetterCheck(document.getElementById('AA18PT'), AA18PT);
                ColorSetterCheck(document.getElementById('AAA18PT'), AAA18PT);
                ColorSetterCheck(document.getElementById('COLORS'), COLORS);
                ColorSetterCheck(document.getElementById('COLORDIFF'), COLORDIFF);

                let Classes = "";

                if (ResultColor == 1) { Classes = "alert fade alert-simple alert-success alert-dismissible text-left font__family-montserrat font__size-16 font__weight-light brk-library-rendered rendered show" }
                if (ResultColor == 2) { Classes = "alert fade alert-simple alert-success alert-dismissible text-left font__family-montserrat font__size-16 font__weight-light brk-library-rendered rendered show" }
                if (ResultColor == 3) { Classes = "alert fade alert-simple alert-warning alert-dismissible text-left font__family-montserrat font__size-16 font__weight-light brk-library-rendered rendered show" }
                if (ResultColor == 4) { Classes = "alert fade alert-simple alert-danger alert-dismissible text-left font__family-montserrat font__size-16 font__weight-light brk-library-rendered rendered show" }

                let HTML = '<div class="' + Classes + '"> <p class="text-center" style="margin-bottom:0">' + Message + '</p></div>';
                contrastResult.innerHTML = HTML;
            }

        });</script>

}


